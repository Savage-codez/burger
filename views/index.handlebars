<h1 class="banner">Burgers! Burgers! Burgers!</h1>
<div id="centerRow" class="row">
  <h2>Add a burger</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="bu">Burger Name:</label>
      <input type="text" id="bu" name="name">
    </div>

    <button type="submit">Add Burger</button>
  </form>

  

  <div class="row">
    <div class="col-sm-6">
      <h2>Burgers waiting to be devoured.</h2>

      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{this.burgerName}}
        {{> burgers/burger-block devoured=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-sm-6">
      <h2>Devoured burgers.</h2>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{this.burgerName}}
        {{> burgers/burger-block devoured=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>